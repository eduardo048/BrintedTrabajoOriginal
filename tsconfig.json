{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "api/**/*.ts"
  ]
}
